<!DOCTYPE log>
<log>
	<id>urn:com:ebc:smtp:requestprocessor:log</id>
	<name>SMTP Requestprocessor Application Log</name>
	<handlers>
		<handler>
			<instance>
				<class>org.netkernel.layer0.logging.LogFileHandler</class>
				<string>N:/log/smtp_requestprocessor.%g.log</string>
				<int>50000000</int>
				<int>3</int>
				<boolean>true</boolean>
			</instance>
			<formatterClass>org.netkernel.layer0.logging.ConsoleFormatter</formatterClass>
		</handler>
	</handlers>
</log>